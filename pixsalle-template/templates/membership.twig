{% extends "base.twig" %}

{% block title %}Membership | PixSalle{% endblock %}

{% block main %}
<h1 id = "welcome" data-cy="home__welcomeMsg">Hello {{ username }}!</h1>
<h1 id = "welcome" data-cy="home__welcomeMsg">Your membership is: {{ type }}</h1>

<form action="{{ formAction }}" method="POST">
    <p>Change membership</p>
    <div class="member">
        <select name="membership" >
            <option value = "Cool">Cool</option>
            <option value = "Active">Active</option>
        </select>
        <input type="submit" value="Change">
    </div>
</form>

{% endblock %}